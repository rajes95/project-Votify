      <image>
         <Image url="@../images/joe-biden.jpg" />
      </image>
   </ImageView>
   <ImageView fx:id="trumpImage" fitHeight="88.0" fitWidth="94.0" layoutX="272.0" layoutY="20.0" onMouseClicked="#loadTrumpNews" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images/trump.png" />
      </image>
   </ImageView>
   <ScrollPane fx:id="scrollNews" layoutX="164.0" layoutY="108.0" prefHeight="277.0" prefWidth="422.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="164.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="108.0">
      <content>
         <ImageView fx:id="news1" fitHeight="81.0" fitWidth="190.0" onMouseClicked="#openNews1" pickOnBounds="true" preserveRatio="true" />
      </content>
   </ScrollPane>
   <WebView fx:id="newsWebView" layoutX="163.0" layoutY="14.0" prefHeight="367.0" prefWidth="422.0" AnchorPane.bottomAnchor="19.0" AnchorPane.leftAnchor="163.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="14.0" />
