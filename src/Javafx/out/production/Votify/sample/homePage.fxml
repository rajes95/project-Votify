         </Button>
         <Button fx:id="newsButton" mnemonicParsing="false" onAction="#newsClick" prefHeight="27.0" prefWidth="139.0" text="News">
            <VBox.margin>
               <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </VBox.margin>
         </Button>
      </children>
   </VBox>
</AnchorPane>
